import java.util.List;
import java.util.Set;
import java.util.TreeSet;
/*@Author Derek Nightingale
 * File Name: Utility.java
 * CPS 240 HW #1b
 * Created 28Sept2015
 * Last Updated 30Sept2015
 * 
 * Modified for HW1b
 *This class holds the selection sort algorithm it will sort
 *the integers into ascending order 
 */

public class Utility {

	public List<Integer> selectionSort(List<Integer> list) {
		
		int smallestIndex; // has the smallest value
		int smallest; //smallest of outer loop

		// for each index in the array list
		for (int curIndex = 0; curIndex < list.size(); curIndex++) {
			
			smallest = list.get(curIndex);
			smallestIndex = curIndex;

			for (int i = curIndex + 1; i < list.size(); i++) {
				if (smallest > list.get(i)) {
					// update smallest
					smallest = list.get(i);
					smallestIndex = i;
				}
			}

			/* swap the value */
			// do nothing if the curIndex has the smallest value
			if (smallestIndex == curIndex);
			// swap values otherwise
			else {
				int temp = list.get(curIndex);
				list.set(curIndex, list.get(smallestIndex));
				list.set(smallestIndex, temp);
			}
		}
		
		return list;
	}
	
	public Set<Integer> removeDuplicates(List<Integer> a) {
		Set<Integer> set = new TreeSet<Integer>();
		set.addAll(a);
		return set;
		
	}
}
